-- Services
local camera = workspace.CurrentCamera

local Players = game:GetService('Players')
local Replicated = game:GetService('ReplicatedStorage')
local TweenService = game:GetService('TweenService')
local RunService = game:GetService('RunService')

local UIS = game:GetService('UserInputService')

-- Character
local Player = Players.LocalPlayer
local character = Player.Character or Player.CharacterAdded:Wait()
local Humanoid = character:WaitForChild('Humanoid')
local Animator = Humanoid:WaitForChild('Animator')
local RootPart = character:WaitForChild('HumanoidRootPart')

local Mouse = Player:GetMouse()

-- Code

local Pressed = false
local Number1 = 2.25
local Number2 = 2

local Part = nil
local Debris = game:GetService('Debris')
UIS.InputBegan:Connect(function(Input,Typing)
	if Input.KeyCode == Enum.KeyCode.J and not Typing and Pressed == false then
		Pressed = true
		Part = Instance.new('Part',character)
		Part.Size = Vector3.new(Number1, 1, Number1)
		Part.CFrame = (RootPart.CFrame * CFrame.new(0, -3.65, 0))
		Part.Anchored = true
		Part.Transparency = 0.1
		Part.CanCollide = true
		TweenService:Create(Part,TweenInfo.new(Number2,Enum.EasingStyle.Quad,Enum.EasingDirection.InOut),{Transparency = 1}):Play()
		task.wait(0.25)
		Pressed = false
        Debris:AddItem(Part, Number2)
	end
end)
